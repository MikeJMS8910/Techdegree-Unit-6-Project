extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1 #{name}

        p #{discription}

      .project-tech-links-box.box
        h6 Technologies
        ul

          li HTML
          li CSS
          li JavaScript

        a.btn-link(href=`${link}`) Live Demo
        a.btn-link(href=`${git}`) GitHub Repo

    .project-img-box.box

      img.project-img(src=`${image}`, alt='')

    nav.nav
      a(href='/')
        span &larr;
        |  Back
